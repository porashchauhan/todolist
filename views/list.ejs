<%- include("header") %> 

        <div class="box" id="heading">
            <h1> <%= listtitle %>  </h1>
        </div>
   
        <div class="box">
            <%   newitem.forEach(function(element) {%>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%= element._id %>">
                    <p> <%= element.name %> </p>

                </div>
                <input type="hidden" name="listname" value="<%= listtitle %>"> </input>
            </form>
           <% }); %> 
 
        
           <form class="item" action="/" method="post">
            <input type="text" name="new" placeholder="Add new item" autocomplete="off" >
            <button type="submit" name="list" value="<%= listtitle %>">+</button>
           </form>

        </div>
        
        <%- include("footer") %> 
           
            
        
   
